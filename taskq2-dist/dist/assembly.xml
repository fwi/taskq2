<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<files>
		<file>
			<source>../taskq2-parent/pom.xml</source>
			<destName>taskq2-parent-${project.version}-pom.xml</destName>
		</file>
		<file>
			<source>../taskq2-core/pom.xml</source>
			<destName>taskq2-core-${project.version}-pom.xml</destName>
		</file>
		<file>
			<source>../taskq2-jdbc/pom.xml</source>
			<destName>taskq2-jdbc-${project.version}-pom.xml</destName>
		</file>
		<file>
			<source>../taskq2-demo/pom.xml</source>
			<destName>taskq2-demo-${project.version}-pom.xml</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>dist/filtered</directory>
			<outputDirectory>.</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>../taskq2-core/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../taskq2-jdbc/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../taskq2-demo/target</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
